{
  "hosting": {
    "site": "mattriley-info",
    "public": "public",
    "rewrites": [
      {
        "source": "/blog{,/**}",
        "destination": "/blog"
      },
      {
        "source": "**/**",
        "function": "indexNextjs-server"
      }
    ]
  },
  "functions": {
    "source": ".",
    "ignore": [
      ".firebase/**",
      ".firebaserc",
      "firebase.json",
      "**/node_modules/**",
      "**/public/**"
    ]
  }
}
