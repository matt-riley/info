{
  "author": "Matt Riley <matt@mattriley.me> (https://mattriley.io)",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@google-cloud/debug-agent": "4.0.0",
    "@google-cloud/logging-winston": "1.0.1",
    "@google-cloud/profiler": "2.0.1",
    "@google-cloud/storage": "2.5.0",
    "@google-cloud/trace-agent": "4.0.0",
    "@sentry/node": "5.4.0",
    "apollo-datasource-rest": "0.5.0",
    "apollo-server-express": "2.6.3",
    "dotenv": "8.0.0",
    "express": "4.17.1",
    "express-enforces-ssl": "1.1.0",
    "firebase-admin": "8.2.0",
    "graphql": "14.3.1",
    "helmet": "3.18.0",
    "winston": "3.2.1"
  },
  "description": "Matt Riley Info API",
  "devDependencies": {
    "@types/dotenv": "6.1.1",
    "@types/express": "4.17.0",
    "@types/express-enforces-ssl": "1.1.1",
    "@types/graphql": "14.2.1",
    "@types/helmet": "0.0.43",
    "@types/memcached": "2.2.6",
    "@types/node": "12.0.8",
    "commitizen": "3.1.1",
    "cz-conventional-changelog": "2.1.0",
    "husky": "2.4.1",
    "nodemon": "1.19.1",
    "npm-run-all": "4.1.5",
    "rimraf": "2.6.3",
    "standard-version": "6.0.1",
    "ts-node": "8.3.0",
    "tslint": "5.17.0",
    "typescript": "3.5.2"
  },
  "engines": {
    "node": ">=10.0.0",
    "npm": "6.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && git add -A"
    }
  },
  "keywords": [],
  "license": "MIT",
  "main": "lib/index.js",
  "name": "api.mattriley.info",
  "repository": "https://github.com/matt-riley/api.mattriley.info",
  "scripts": {
    "build": "run-p tsc build:schema",
    "build:schema": "ts-node -T ./scripts/update-schema.ts",
    "commit": "npx git-cz",
    "deploy": "gcloud app deploy",
    "lint": "tslint -c ./tslint.json -p tsconfig.json",
    "lint:fix": "tslint -c tslint.json -p tsconfig.json --fix",
    "prebuild": "run-p lint:fix rimraf",
    "predeploy": "npm run build && gcloud config set project mattriley-info",
    "release": "standard-version",
    "rimraf": "rimraf ./lib",
    "start": "node .",
    "start:dev": "nodemon --watch src -e ts,graphql --exec ts-node -T ./src/index.ts",
    "tsc": "tsc"
  },
  "standard-version": {
    "skip": {
      "tag": true
    }
  },
  "version": "1.1.3"
}
