{
  "name": "api.mattriley.info",
  "version": "1.0.0",
  "description": "Matt Riley Info API",
  "repository": "https://github.com/matt-riley/mattapps/tree/master/api.mattriley.info",
  "main": "lib/index.js",
  "scripts": {
    "commit": "npx git-cz",
    "prebuild": "npm run lint:fix",
    "build": "tsc",
    "predeploy": "npm run build && gcloud config set project mattriley-info",
    "deploy": "gcloud beta app deploy",
    "start": "node .",
    "start:dev": "nodemon --watch src -e ts,graphql --exec ts-node -T ./src/index.ts",
    "release": "standard-version",
    "lint": "tslint -c ./tslint.json -p tsconfig.json",
    "lint:fix": "tslint -c tslint.json -p tsconfig.json --fix"
  },
  "keywords": [],
  "author": "Matt Riley <matt@mattriley.me> (https://mattriley.io)",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "2.8.5",
    "@types/dotenv": "6.1.1",
    "@types/express": "4.16.1",
    "@types/express-enforces-ssl": "1.1.1",
    "@types/graphql": "14.2.0",
    "@types/helmet": "0.0.43",
    "@types/node": "12.0.3",
    "commitizen": "3.1.1",
    "cz-conventional-changelog": "2.1.0",
    "nodemon": "1.19.1",
    "npm-run-all": "4.1.5",
    "standard-version": "6.0.1",
    "ts-node": "8.2.0",
    "tslint": "5.17.0",
    "typescript": "3.5.1"
  },
  "dependencies": {
    "@google-cloud/profiler": "2.0.1",
    "@google-cloud/storage": "2.5.0",
    "@google-cloud/trace-agent": "3.6.1",
    "@sentry/node": "5.3.0",
    "apollo-datasource-rest": "0.4.0",
    "apollo-server-express": "2.5.0",
    "cors": "2.8.5",
    "dotenv": "8.0.0",
    "express": "4.17.1",
    "express-enforces-ssl": "1.1.0",
    "firebase-admin": "8.0.0",
    "graphql": "14.3.1",
    "helmet": "3.18.0",
    "winston": "3.2.1"
  },
  "engines": {
    "node": ">=10.0.0",
    "npm": "6.x"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "standard-version": {
    "skip": {
      "tag": true
    }
  }
}
