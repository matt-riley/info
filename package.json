{
  "author": "Matt Riley <matt@mattriley.me> (https://mattriley.io)",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@google-cloud/debug-agent": "4.1.0",
    "@google-cloud/logging-winston": "3.0.0",
    "@google-cloud/profiler": "3.0.1",
    "@google-cloud/storage": "4.1.2",
    "@google-cloud/trace-agent": "4.2.3",
    "@sentry/node": "5.8.0",
    "apollo-datasource-rest": "0.6.6",
    "apollo-server-express": "2.9.7",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-enforces-ssl": "1.1.0",
    "firebase-admin": "8.7.0",
    "graphql": "14.5.8",
    "helmet": "3.21.2",
    "winston": "3.2.1"
  },
  "description": "Matt Riley Info API",
  "devDependencies": {
    "@types/dotenv": "8.2.0",
    "@types/express": "4.17.2",
    "@types/express-enforces-ssl": "1.1.1",
    "@types/graphql": "14.5.0",
    "@types/helmet": "0.0.45",
    "@types/memcached": "2.2.6",
    "@types/node": "12.12.7",
    "commitizen": "4.0.3",
    "cz-conventional-changelog": "3.0.2",
    "husky": "3.0.9",
    "nodemon": "1.19.4",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.0",
    "standard-version": "7.0.0",
    "ts-node": "8.5.0",
    "tslint": "5.20.1",
    "typescript": "3.7.2"
  },
  "engines": {
    "node": ">=10.0.0",
    "npm": "6.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && git add -A"
    }
  },
  "keywords": [],
  "license": "MIT",
  "main": "lib/index.js",
  "name": "api.mattriley.info",
  "repository": "https://github.com/matt-riley/api.mattriley.info",
  "scripts": {
    "build": "run-p tsc build:schema",
    "build:schema": "ts-node -T ./scripts/update-schema.ts",
    "commit": "npx git-cz",
    "deploy": "gcloud app deploy",
    "lint": "tslint -c ./tslint.json -p tsconfig.json",
    "lint:fix": "tslint -c tslint.json -p tsconfig.json --fix",
    "prebuild": "run-p lint:fix rimraf",
    "predeploy": "npm run build && gcloud config set project mattriley-info",
    "release": "standard-version",
    "rimraf": "rimraf ./lib",
    "start": "node .",
    "start:dev": "nodemon --watch src -e ts,graphql --exec ts-node -T ./src/index.ts",
    "tsc": "tsc"
  },
  "standard-version": {
    "skip": {
      "tag": true
    }
  },
  "version": "1.1.3"
}
