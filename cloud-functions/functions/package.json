{
  "name": "cloud-functions",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions:getArtist,functions:getLabel,functions:artistTotals,functions:releaseTotals,functions:getArtistImgs,functions:getReleaseImgs,functions:getLabelImgs,functions:updateImgs",
    "logs": "firebase functions:log",
    "lint": "eslint ./src/**/* --ext .ts,.tsx",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(ts|tsx|json)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "test": "jest"
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/storage": "5.1.0",
    "axios": "0.19.2",
    "compression": "1.7.4",
    "cosha": "0.3.12",
    "express": "4.17.1",
    "firebase-admin": "8.12.1",
    "firebase-functions": "3.7.0",
    "sirv": "1.0.1"
  },
  "devDependencies": {
    "@types/axios": "0.14.0",
    "@types/jest": "26.0.3",
    "@typescript-eslint/eslint-plugin": "3.4.0",
    "@typescript-eslint/parser": "3.3.0",
    "eslint": "7.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "firebase-functions-test": "0.2.1",
    "jest": "26.1.0",
    "prettier": "2.0.5",
    "ts-jest": "26.1.1",
    "typescript": "^3.9.6"
  },
  "private": true,
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": false
      }
    },
    "rules": {}
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "bracketSpacing": false,
    "trailingComma": "all"
  }
}
