{
  "name": "cloud-functions",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions:getArtist,functions:getLabel,functions:artistTotals,functions:releaseTotals,functions:getArtistImgs,functions:getReleaseImgs,functions:getLabelImgs,functions:updateImgs",
    "logs": "firebase functions:log",
    "lint": "eslint ./src/**/* --ext .ts,.tsx",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(ts|tsx|json)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "test": "jest"
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/storage": "4.7.0",
    "axios": "0.19.2",
    "compression": "1.7.4",
    "cosha": "0.3.9",
    "express": "4.17.1",
    "firebase-admin": "8.10.0",
    "firebase-functions": "3.6.0",
    "sirv": "0.4.0"
  },
  "devDependencies": {
    "@types/axios": "0.14.0",
    "@types/jest": "25.2.1",
    "@typescript-eslint/eslint-plugin": "2.27.0",
    "@typescript-eslint/parser": "2.28.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-prettier": "3.1.3",
    "firebase-functions-test": "0.2.0",
    "jest": "25.3.0",
    "prettier": "2.0.4",
    "ts-jest": "25.3.1",
    "typescript": "^3.8.3"
  },
  "private": true,
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": false
      }
    },
    "rules": {}
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "bracketSpacing": false,
    "trailingComma": "all"
  }
}
